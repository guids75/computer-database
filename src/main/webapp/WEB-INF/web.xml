<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
		 http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	version="3.1">

	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>classpath:applicationContext.xml</param-value>
	</context-param>

	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>
	
	<servlet>
		<servlet-name>Dashboard</servlet-name>
		<servlet-class>com.excilys.formation.computerdatabase.servlet.Dashboard</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Dashboard</servlet-name>
		<url-pattern>/dashboard</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>Add Computer</servlet-name>
		<servlet-class>com.excilys.formation.computerdatabase.servlet.AddComputer</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Add Computer</servlet-name>
		<url-pattern>/addComputer</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>Delete Computer</servlet-name>
		<servlet-class>com.excilys.formation.computerdatabase.servlet.DeleteComputer</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Delete Computer</servlet-name>
		<url-pattern>/deleteComputer</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>Edit Computer</servlet-name>
		<servlet-class>com.excilys.formation.computerdatabase.servlet.EditComputer</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Edit Computer</servlet-name>
		<url-pattern>/editComputer</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>Dashboard Submit</servlet-name>
		<servlet-class>com.excilys.formation.computerdatabase.servlet.DashboardSubmit</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Dashboard Submit</servlet-name>
		<url-pattern>/dashboardSubmit</url-pattern>
	</servlet-mapping>

</web-app>