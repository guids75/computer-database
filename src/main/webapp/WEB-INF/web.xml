<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
		 http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	version="3.1">

	<servlet>
		<servlet-name>Dashboard</servlet-name>
		<servlet-class>com.excilys.formation.computerdatabase.web.servlet.Dashboard</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Dashboard</servlet-name>
		<url-pattern>/dashboard</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>Add Computer</servlet-name>
		<servlet-class>com.excilys.formation.computerdatabase.web.servlet.AddComputer</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Add Computer</servlet-name>
		<url-pattern>/addComputer</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>Delete Computer</servlet-name>
		<servlet-class>com.excilys.formation.computerdatabase.web.servlet.DeleteComputer</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Delete Computer</servlet-name>
		<url-pattern>/deleteComputer</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>Edit Computer</servlet-name>
		<servlet-class>com.excilys.formation.computerdatabase.web.servlet.EditComputer</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Edit Computer</servlet-name>
		<url-pattern>/editComputer</url-pattern>
	</servlet-mapping>

</web-app>